<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seeme" >

    <LinearLayout
        android:id="@+id/Main_c_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/Main_c_ListView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:paddingTop="60dp"
            android:scrollbars="none" >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@drawable/bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Activity_Main" >

        <ImageView
            android:id="@+id/Main_act_go_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:alpha="0.1"
            android:src="@drawable/go_icon" />

        <ImageView
            android:id="@+id/Main_act_back_ImageView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Main_seekBar"
            android:layout_alignTop="@+id/Main_act_go_imageView"
            android:layout_marginLeft="30dp"
            android:alpha="0.4"
            android:src="@drawable/back_icon" />

        <ImageView
            android:id="@+id/Main_act_next_ImageView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Main_seekBar"
            android:layout_alignRight="@+id/Main_seekBar"
            android:layout_marginRight="28dp"
            android:alpha="0.4"
            android:src="@drawable/next_icon" />

        <SeekBar
            android:id="@+id/Main_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/listViewSongs"
            android:layout_below="@+id/Main_act_go_imageView"
            android:layout_marginTop="16dp"
            android:alpha="0.6" />

        <ListView
            android:id="@+id/listViewlikes"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:alpha="0.5"
            android:background="#fffff0"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >
        </ListView>

        <ListView
            android:id="@+id/listViewSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/listViewlikes"
            android:layout_alignLeft="@+id/listViewlikes"
            android:layout_below="@+id/Main_seekBar"
            android:layout_marginTop="15dp"
            android:alpha="0.6"
            android:background="@drawable/li"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >
        </ListView>
    </RelativeLayout>

